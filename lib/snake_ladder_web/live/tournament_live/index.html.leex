<div class="tournament">
  <%= if @game_started do %>
    <%= live_component(@socket, SnakeLadderWeb.Game, id: @token, token: @token, players: @players, dice: @dice, current_player: @current_player, current_turn: @current_turn) %>
  <% else %>
    <div class="row">
      <div class="notice column column-30">
        <p> Waiting for Player 2 </p>
        <p>Copy and share the url</p>
        <input type="text" value="https://test.herokuapp.com?t=ETD">
      </div>
    </div>
  <% end %>
</div>
